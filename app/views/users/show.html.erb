<h4 id="right" class="btn btn-primary next-step">Manage Your Spots</h4>
<div id="renter">
	<h1>Available spots</h1>
	<div id="map"></div>
	<div class="container_fluid" style="text-align:center">
		<% if @user.current_reservation %>
		<div class="container" id="right-image" style="float:right;width:50%;">
			<% if @user.current_reservation.spot.picture.url %>
			<img src="<%= @user.current_reservation.spot.picture.url %> " style="float: right;width: 100%;">
			<% end %>
		</div>
		<p class="papa"><b>Price:</b> <%= @user.current_reservation.spot.price %>/h</p>
		<p class="papa"><b>Address:</b> <%= @user.current_reservation.spot.address %></p>
		<p class="papa"><b>End Time:</b> <%= @user.current_reservation.spot.end_time.strftime("%m/%d/%Y %l:%M %p") %></p>
		<br>
		<br>
		<p>*All done with your errands? Tap the button below to end your reservation!</p>
		<%= button_to "End Reservation", spot_reservation_path(@location, @reservation), method: :patch %>
		<% else %>
		<div id="parking-spots"></div>
		<% end %>
	</div>
</div>



<div id="owner">
	<h4 id="right" class="rent-spots btn btn-primary next-step">Rent Spots</h4>
	<h1>My Spots</h1>



	<div class="spot-list clearfix">
		<%= render current_user.owned_spots_ordered %>
	</div>

</div>
